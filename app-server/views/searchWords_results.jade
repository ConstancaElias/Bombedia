extends layout

block content
    if view == "noWords"
        section(id="services" class="features-area" style="background-color: #0067f4")
                div(class="container")
                    div(class="row justify-content-center")
                        div(class="col-lg-12 col-md-10")
                            div(class="section-title text-center pb-10")
                                h3(class="title" style="color: white") Resultados
                                p(class="text"  style="color: white") Não existem palavras &nbsp;
                                    b #{sentiment} &nbsp;
                                    | associadas à palavra &nbsp;
                                    b #{word}.
                            
                    div(class="row justify-content-center")
                        div(class="col-lg-12 col-md-10 col-sm-9")
                            div(class="single-features mt-10")
                                div(class="features-title-icon d-flex justify-content-between")
                                    ul
                                        each word in words
                                            li= word


                            form(action="/search")
                                button(class="btn btn-round btn-primary p-2 mt-5") Voltar
    else
        section(id="services" class="features-area" style="background-color: #0067f4")
            div(class="container")
                div(class="row justify-content-center")
                    div(class="col-lg-12 col-md-10")
                        div(class="section-title text-center pb-10")
                            h3(class="title" style="color: white") Resultados
                            p(class="text"  style="color: white") As seguintes palavras são consideradas &nbsp;
                                b #{sentiment} &nbsp;
                                | e estão associadas à palavra &nbsp;
                                b #{word}.
                        
                div(class="row justify-content-center")
                    div(class="col-lg-12 col-md-10 col-sm-9")
                        div(class="single-features mt-10")
                            div(class="features-title-icon d-flex justify-content-between")
                                ul
                                    each word in words
                                        li= word

                        form(action="/search")
                            button(class="btn btn-round btn-primary p-2 mt-5") Voltar