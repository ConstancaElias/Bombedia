extends layout

block content
  section(id="services" class="features-area" style="background-color: #0067f4")
    div(class="container p-5")
      div(class="row justify-content-center")
        div(class="col-lg-10 col-md-10")
          div(class="section-title text-center pb-10")
            h3(class="title" style="color: white") Resultados

      div(class="row justify-content-center")
        div(class="col-lg-12 col-md-10 col-sm-9")
          div(class="single-features my-10")      
            div(class="container")
                  span O
                    i &nbsp; post
                    | &nbsp; foi analisado com sucesso!
                  br
                  br
                  p
                    b Conclus√£o:
                  if reaction == "Controverso"
                    li(class="nav-item") Foi classificado como 
                      b #{reaction}&nbsp;
                      | com um sentimento&nbsp;
                      b #{sentiment}&nbsp;
                      | associado.

                  else
                    li(class="nav-item") Foi classificado como 
                      b #{reaction}. &nbsp;

                  if view == "text"
                  
                    form(action="/analyse")
                      button(class="btn btn-round btn-primary p-2 mt-5") Voltar

                  else
                    form(action="/analyse/url")
                      button(class="btn btn-round btn-primary p-2 mt-5") Voltar
                      
            //div(class="modal-footer")
              span(class="m-2")
                form(method="get" action="/edit/#{id}")
                  input(type="submit" class="btn btn-primary" value="Edit Post" style="padding: 6px 12px; margin-bottom: 0; font-size: 14px; font-weight: normal; border: 1px solid transparent; border-radius: 4px; background-color: #428bca; color: #FFF;")
    